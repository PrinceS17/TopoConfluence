# def configure(conf):
#     conf.check_nonfatal(header_name='stdint.h', define_name='HAVE_STDINT_H')

def build(bld):
    module = bld.create_ns3_module('ppbp-application', ['core', 'internet', 'network', 'config-store', 'point-to-point', 'applications', 'stats'])
    module.source = [
        'model/PPBP-application.cc',
        'helper/PPBP-helper.cc',
        ]

    module_test = bld.create_ns3_module_test_library('ppbp-application')
    module_test.source = [
        # 'test/ppbp-application-test-suite.cc',
        ]

    headers = bld(features='ns3header')
    headers.module = 'ppbp-application'
    headers.source = [
        'model/PPBP-application.h',
        'helper/PPBP-helper.h',
        ]

    if bld.env.ENABLE_EXAMPLES:
        bld.recurse('examples')

    # bld.ns3_python_bindings()

